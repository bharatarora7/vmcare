            var Delhi= new Array('Fortis','Indraprastha Apollo','AIIMS','Sir Ganga Ram Hospital', 'Dr. Ram Manohar Lohia Hospital');
            var Chennai = new Array('Apollo Hospital','Fortis Malar Hospital','SRM Hospital','St. Isabella Hospital','Sankara Nethralaya');

            var categoryFood= document.getElementById('categoryFood');
            //alert(categoryFood);
            var program= document.getElementById('typeFood');
            //program.option['select'] = new Option(Bangalore['select'],'select');
            var selected = categoryFood.value;
             
            /** Remove all options in second dropdown list selection **/
            program.options.length=0;
              var option = document.createElement("option");
                option.text = "--Hospitals--";
                program.add(option,program[0]);
            if(selected == 1){
                i=1;
                for(node in Bangalore){
                    program.add(new Option(Bangalore[node],Bangalore[node]),program[i] )
                    i++;                
                }
                
                var doclabel= document.getElementById('docs');
                doclabel.text = 'Same Hill, Bharat Arora';
            }else if(selected == '2' ){
             i=1;
                for(node in Hyderabad){
                    program.add(new Option(Hyderabad[node],Hyderabad[node]),program[i] )
                    i++;                
                
            }
            }else if(selected==3){
             i=1;
                for(node in Delhi){
                    program.add(new Option(Delhi[node],Delhi[node]),program[i] )
                    i++;                
                }
            }else if(selected==4){
             i=1;
                for(node in Chennai){
                    program.add(new Option(Chennai[node],Chennai[node]),program[i] )
                    i++;                
                }
            }
            else{
            program.options[0] = new Option('Please select','NA');
            }
        }
                            
   

